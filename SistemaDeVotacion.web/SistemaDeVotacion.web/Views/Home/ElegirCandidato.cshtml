@model IEnumerable<SistemaDeVotacion.web.Models.CandidateViewModel>

@{
	ViewBag.Title = "Elegir Candidato";
}

<h2>Elegir Candidato</h2>

<div class="container">
	<div class="row">
		@foreach (var candidate in Model)
		{
			<div class="col-md-4 text-center">
				<div class="card" style="margin-bottom: 20px;">
					<img src="@Url.Content($"~/images/{candidate.Id}.jpg")" alt="@candidate.NombreCandidato" class="card-img-top w-75 d-block mx-auto" />
					<div class="card-body">
						<h5 class="card-title">@candidate.NombreCandidato</h5>
						<p class="card-text">Cantidad de Votos: @candidate.CantidadDeVotos</p>
						<form asp-action="Votar" asp-controller="Home" method="post">
							<input type="hidden" name="candidateId" value="@candidate.Id" />
							<button type="submit" class="btn btn-primary">Votar</button>
						</form>
					</div>
				</div>
			</div>
		}
	</div>
</div>

<div class="text-center" style="margin-top: 20px;">
	<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver al Inicio</a>
</div>